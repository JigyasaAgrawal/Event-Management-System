<%- include ('../partials/header0') %>

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-10 col-sm-6">
        <h1>Welcome <%=vendor.username%></h1>
        </div>
        <div class="col-10 mt-1 col-sm-6">
            <button type="button" class="btn btn-secondary"><a style="color:white" href="/vendor/addService" >Add new service</a></button>
        </div>
    </div>
    <div class="row ml-1">
        <address><%=vendor.email%></address>
    </div>
    
    <br>
    <br>
     <h2>Services</h2>
     <hr>
    
    <div class="row" style="display: flex; flex-wrap:wrap;">
        <% vendor.services.forEach(function(service){ %>
            <div class=" col-10 col-sm-4  col-md-3  card p-3">

                    <img class="card-img-top" src="<%=service.image[0] %>">
                    <div class="card-body ">
                        <h5 class="card-title">Type: <%= service.type %> </h5>
                        <h5 class="card-title">City: <%= service.city %> </h5>
                        <p class="card-text"><%= service.description %> </p>
                    </div>
                
            </div>
        <% }); %>
    </div>
    
</div>
<hr><hr>
</body>
</html>