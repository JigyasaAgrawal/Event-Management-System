<%- include ('../partials/header1') %>

<div class="container-fluid">
    <div class="row mt-2 ml-2">
        <div>
        <h3>Welcome <%=vendor.username%></h3>
        </div>
    </div>
    <div class="row ml-2">
        <address><%=vendor.email%></address>
    </div>
    
    <br>
    <br>
     <h2>Services</h2>
     <hr>
    
    <div class="row" style="display: flex; flex-wrap:wrap;">
        <% vendor.services.forEach(function(service){ %>
            <div class=" col-10 col-sm-4  col-md-3  card p-3">

                    <img class="card-img-top" src="<%=service.image[0] %>">
                    <div class="card-body ">
                        <h6 class="card-title">Price: <%= service.price %> </h6>
                        <h6 class="card-title">Type: <%= service.type %> </h6>
                        <h6 class="card-title">City: <%= service.city %> </h6>
                        <hr>
                        <p class="card-text"><%= service.description %> </p>
                    </div>
                
            </div>
        <% }); %>
    </div>
    
</div>
<hr><hr>
<%- include ('../partials/footer1') %>